        {
          "_key": "aa7b991e7910",
          "_type": "span",
          "marks": [],
          "text": "Instant ACID from "
        },
        {
          "_key": "0eb74d873bb1",
          "_type": "span",
          "marks": [
            "b2f6012e8d68"
          ],
          "text": "CMP Books"
